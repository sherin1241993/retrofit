<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B9C95"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/welcome"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="45sp"/>

        <Button
            android:id="@+id/but_showAllPots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInput"
            android:layout_centerInParent="true"
            android:layout_marginTop="90dp"
            android:text="@string/show_all_pots"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/but_showOnlyOnePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/but_showAllPots"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:text="@string/show_one_post"
            android:textColor="@color/black"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/but_show_comment_by_postId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/but_showOnlyOnePost"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:text="@string/show_comments_by_postId"
            android:textColor="@color/black"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/bt_add_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/but_show_comment_by_postId"
            android:layout_marginTop="40dp"
            android:text="@string/adding_post_here"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/bt_change_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_add_post"
            android:layout_marginTop="40dp"
            android:text="@string/change_language"
            android:textColor="@color/black"
            android:layout_marginBottom="90dp"/>

    </RelativeLayout>
</ScrollView>